<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.antand.clim8.ui.home.HomeFragment"
        android:label="Home" />

    <fragment
        android:id="@+id/nav_forecast"
        android:name="com.antand.clim8.ui.forecast.ForecastFragment"
        android:label="Forecast">
        <argument
            android:name="city"
            app:argType="string"
            android:defaultValue="Flagstaff" />
    </fragment>

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.antand.clim8.ui.settings.SettingsFragment"
        android:label="Settings" />
</navigation>
